{
  "name": "m3m0r7/nfc-for-php",
  "description": "NFC Reader written in PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "memory"
    }
  ],
  "require": {
    "php": ">=7.4|>=8",
    "ext-ffi": "*",
    "illuminate/collections": "^8.63",
    "monolog/monolog": "^2.3",
    "symfony/console": "^5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "NFC\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --stop-on-failure --debug --stderr tests/Units",
    "fix": [
      "./vendor/bin/phpcbf src",
      "./vendor/bin/phpcbf tests"
    ]
  }
}
